.list_detail {
  width: 100%;
}
.list_detail .ppt_title {
    width: 654rpx;
    text-align: left;
    font-size: 40rpx;
    font-weight: 500;
    margin: 42rpx 0 22rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.list_detail .ppt_des {
    width: 654rpx;
    text-align: left;
    font-size: 24rpx;
    font-weight: 400;
    color: #a0a0a0;
}
.list_detail .ppt_tip {
    position: absolute;
    bottom: 16rpx;
    right: 20rpx;
    color: #FFF;
}
.list_detail .ppt_tip.iconfont:before {
      margin-right: 10rpx;
}
.list_detail .filterPop {
    width: 100%;
    top: 0;
    z-index: 999;
}
.list_detail .filterPop .filterWrapper {
      position: relative;
      width: 654rpx;
      margin: 0 auto;
      font-size: 24rpx;
}
.list_detail .filterPop .filter {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-justify-content: space-around;
              justify-content: space-around;
      background: #f3f3f3;
      border-radius: 30rpx;
}
.list_detail .filterPop .filter .filter_des {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        padding: 16rpx 0 20rpx 0;
}
.list_detail .filterPop .filter .iconfont {
        margin-left: 14rpx;
        -webkit-transform: rotateZ(-90deg);
                transform: rotateZ(-90deg);
        -webkit-transition: all .4s ease;
        transition: all .4s ease;
}
.list_detail .filterPop .filter .iconfont:before {
          font-size: 20rpx;
}
.list_detail .filterPop .filter .rotate {
        -webkit-transform: rotateZ(-90deg) rotateY(180deg);
                transform: rotateZ(-90deg) rotateY(180deg);
}
.list_detail .filterPop .filter_detail {
      position: absolute;
      width: 100%;
      background: #FFF;
      border-bottom-left-radius: 30rpx;
      border-bottom-right-radius: 30rpx;
      max-height: 0;
      overflow: hidden;
      -webkit-transition: all .2s ease;
      transition: all .2s ease;
}
.list_detail .filterPop .filter_detail .filter_line {
        padding: 16rpx 0 20rpx 0;
        margin: 0 40rpx;
        text-align: left;
        border-bottom: 1px solid #EFEFEF;
}
.list_detail .filterPop .filter_detail .filter_line:last-child {
          border: none;
}
.list_detail .filterPop .filter_detail .filter_line.activeText {
          color: #FD8E23;
}
.list_detail .filterPop .filter_detail .filter_line text {
          padding-left: 30rpx;
          font-size: 28rpx;
}
.list_detail .filterPop .filter_detail.showDetail {
        max-height: 600rpx;
}
.list_detail .pull {
    width: 654rpx;
    margin: 40rpx auto 0;
}

